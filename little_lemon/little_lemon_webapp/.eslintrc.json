{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": [
		"plugin:react/recommended",
		"plugin:jest/recommended",
		"next/core-web-vitals",
		"next/babel"
	],
	"presets": ["@babel/preset-react-app"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "jest"],
	"rules": {
		"no-underscore-dangle": 0,
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "always",
				"jsx": "always"
			}
		]
	}
}
